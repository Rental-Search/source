.section-header
    {% if is_pro %}
    span.badge-pro.pull-right pro
    h4 Contactez-nous
    {% else %}
    h4 Contactez-moi
    {% endif %}
.section-body
    .part
        .block-thumbnail
            .thumbnail-img
                a(href="{{ product.owner_url }}", data-toggle="modal", data-target="{{ product.owner_url }}"): img(style="{% if product.owner_avatar_medium %}background-image: url({{ product.owner_avatar_medium }}){% endif %}").bg-image
            .thumbnail-content
                h5: a(href="{{ product.owner_url }}", data-toggle="modal", data-target="{{ product.owner_url }}") {{ product.owner }} {% if is_pro %}&nbsp;Pro{% endif %}
                {% if is_pro %}
                if patron.about
                  p: i {{ patron.about }}
                {% else %}
                {% with product.owner.average_note as rate %}
                include ../../_rate
                {% endwith %}
                p
                    | Membre depuis le
                    br
                    span {{ product_object.owner.date_joined|date:"d F Y" }}
                {% endif %}
    .part
        a(href="#/message", data-dismiss="modal").btn.bg-success.send-message
            i.flaticon.stroke.mail-2
            | Envoyez un message
        a(href="#/phone", data-dismiss="modal").btn.bg-success.call
            i.flaticon.stroke.phone-3
            | Appelez
        {% if is_pro %}
        a(href="#/shop", data-toggle="modal", data-target="#pro-popin-shop").btn.bg-success
            i.flaticon.stroke.shop-1
            | Venez en magasin
        a(href="#/website", data-toggle="modal", data-target="#pro-popin-website-link").btn.bg-success
            i.flaticon.stroke.imac-1
            | Visitez notre site web
        {% else %}
        ul.nav.stats
            {% with product_object.owner.stats as stats %}
            include ../../_patron_stats
            {% endwith %}
        {% endif %}
