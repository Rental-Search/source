-load i18n
section.pull-nothing(ng-hide="(bookingList && bookingList.length > 0) || filtered")
  .notification-empty
    .notification-container
      i(class="{% verbatim %}{{routeChangeInProgress ? 'loading' : ''}}{% endverbatim %}").icon-5x.indent-sm-b.flaticon.stroke.calendar-5
      h2(ng-show="!routeChangeInProgress") {% trans "Pas encore de réservation" %}
      p(ng-show="!routeChangeInProgress").indent-md-v.text-black
        | {% trans "A tout moment vous pouvez faire une demande de réservation auprès d'un propriétaire si son objet vous intéresse" %}
      a(ng-show="!routeChangeInProgress", href="#").btn-inline.bg-success-hover.text-white {% trans "Commencez à rechercher un objet" %}