                td
                    input(type="checkbox", ng-model="product.audio_input")
            tr(ng-if="isAuto")
                td {% trans "CV fiscaux" %} *
                td.without-search
                    select(ng-model="product.tax_horsepower", name="tax_horsepower", eloue-chosen, data-ng-disabled="submitInProgress", required)
                        option(ng-repeat="item in capacityOptions", value="{% verbatim %}{{item.id}}{% endverbatim %}") {% verbatim %}{{item.name}}{% endverbatim %}
                    .text-danger(data-ng-show="itemInfoForm.tax_horsepower.$error.required && !!itemInfoSubmitted", translate="required_field")
            tr(ng-if="isAuto")
                td {% trans "N° d'immatriculation" %} *
                td
                    input(type="text", name="licence_plate", placeholder="N° d'immatriculation", ng-model="product.licence_plate", ng-maxlength="10", required).characteristic-form
                    .text-danger(data-ng-show="itemInfoForm.licence_plate.$error.required && !!itemInfoSubmitted", translate="required_field")
                    .text-danger(data-ng-show="itemInfoForm.licence_plate.$error.maxlength && !!itemInfoSubmitted", translate="maxLength10")
            tr(ng-if="isAuto")
                td {% trans "1er mise en circulation" %} *
                td
                    input(type="text", name="first_registration_date", placeholder="dd/mm/yyyy", ng-model="product.first_registration_date", eloue-extended-datepicker, required).date.characteristic-form
                    .text-danger(data-ng-show="itemInfoForm.first_registration_date.$error.required && !!itemInfoSubmitted", translate="required_field")
            tr(ng-show="isRealEstate")
                td {% trans "Capacité" %}
                td.without-search
                    select(ng-model="product.capacity", eloue-chosen, data-ng-disabled="submitInProgress").table-form
                        option(ng-repeat="item in capacityOptions", value="{% verbatim %}{{item.id}}{% endverbatim %}") {% verbatim %}{{item.name}}{% endverbatim %}
            tr(ng-show="isRealEstate")
