-load i18n
.row(ng-show="isAuto || isRealEstate")
    table.calendar
        tbody
            tr
                td {% trans "Quantité" %}
                td
                    input(type="number", ng-model="product.quantity", placeholder="{% trans 'Quantité' %}", min=1).characteristic-form
            tr(ng-if="isAuto")
                td {% trans "Marque" %} *
                td
                    input(type="text", name="brand", ng-model="product.brand", placeholder="{% trans 'Marque' %}", required).characteristic-form
                    .text-danger(data-ng-show="itemInfoForm.brand.$error.required && !!itemInfoSubmitted", translate="required_field")
            tr(ng-if="isAuto")
                td {% trans "Modèle" %} *
                td
                    input(type="text", name="model", ng-model="product.model", placeholder="{% trans 'Modèle' %}", required).characteristic-form
                    .text-danger(data-ng-show="itemInfoForm.model.$error.required && !!itemInfoSubmitted", translate="required_field")
            tr(ng-show="isAuto")
                td {% trans "Nombre de place" %}
                td.without-search
                    select(ng-model="product.seat_number", eloue-chosen, data-ng-disabled="submitInProgress")
                        option(ng-repeat="item in seatNumberOptions", value="{% verbatim %}{{item.id}}{% endverbatim %}") {% verbatim %}{{item.name}}{% endverbatim %}
            tr(ng-show="isAuto")
                td {% trans "Nombre de porte" %}
                td.without-search
                    select(ng-model="product.door_number", eloue-chosen, data-ng-disabled="submitInProgress")
                        option(ng-repeat="item in doorNumberOptions", value="{% verbatim %}{{item.id}}{% endverbatim %}") {% verbatim %}{{item.name}}{% endverbatim %}
            tr(ng-show="isAuto")
                td {% trans "Énergie" %}
                td.without-search
                    select(ng-model="product.fuel", eloue-chosen, data-ng-disabled="submitInProgress")
                        option(ng-repeat="item in fuelOptions", value="{% verbatim %}{{item.id}}{% endverbatim %}") {% verbatim %}{{item.name}}{% endverbatim %}
            tr(ng-show="isAuto")
                td {% trans "Boite de vitesse" %}
                td.without-search
                    select(ng-model="product.transmission", eloue-chosen, data-ng-disabled="submitInProgress")
                        option(ng-repeat="item in transmissionOptions", value="{% verbatim %}{{item.id}}{% endverbatim %}") {% verbatim %}{{item.name}}{% endverbatim %}
            tr(ng-show="isAuto")
                td {% trans "Kilométrage" %}
                td.without-search
                    select(ng-model="product.mileage", eloue-chosen, data-ng-disabled="submitInProgress")
                        option(ng-repeat="item in mileageOptions", value="{% verbatim %}{{item.id}}{% endverbatim %}") {% verbatim %}{{item.name}}{% endverbatim %}
            tr(ng-show="isAuto")
                td {% trans "Consommation" %}
                td.without-search
                    select(ng-model="product.consumption", eloue-chosen, data-ng-disabled="submitInProgress")
                        option(ng-repeat="item in consumptionOptions", value="{% verbatim %}{{item.id}}{% endverbatim %}")  {% verbatim %}{{item.name}}{% endverbatim %}
            tr(ng-if="isAuto")
                td {% trans "Kilomètres inclus/jour" %} *
                td
                    input(type="number", name="km_included", ng-model="product.km_included", placeholder="Km inclus", required).characteristic-form
                    .text-danger(data-ng-show="itemInfoForm.km_included.$error.required && !!itemInfoSubmitted", translate="required_field")
            tr(ng-show="isAuto")
                td {% trans "Prix par kilomètres supplémentaires" %}
                td
                    input(type="number", ng-model="product.costs_per_km", step="0.5", placeholder="{% trans 'Prix' %}").characteristic-form
            tr(ng-show="isAuto")
                td {% trans "Climatisation" %}
                td
                    input(type="text", ng-model="product.air_conditioning", placeholder="{% trans 'Climatisation' %}").characteristic-form
            tr(ng-show="isAuto")
                td {% trans "Direction assistée" %}
                td
                    input(type="checkbox", ng-model="product.power_steering")
            tr(ng-show="isAuto")
                td {% trans "Régulateur de vitesse" %}
                td
                    input(type="checkbox", ng-model="product.cruise_control")
            tr(ng-show="isAuto")
                td {% trans "GPS" %}
                td
                    input(type="checkbox", ng-model="product.gps")
            tr(ng-show="isAuto")
                td {% trans "Siège bébé" %}
