-load i18n
block details
    .section-content
        form(name="itemTariffsForm", ng-submit="updatePrices()")
          fieldset(ng-disabled="submitInProgress")
            h2 {% trans "Grille tarifaire" %}
            .text-danger(eloue-form-field-message field-name="amount") {% verbatim %}{{value}}{% endverbatim %}
            .row
                .col-lg-12
                    table.calendar(ng-show="!isAuto && !isRealEstate")
                        thead
                            tr
                                td {% trans "Durée" %}
                                td {% trans "Prix" %}
                        tbody
                            tr
                                td {% trans "1 heure" %}
                                td
                                    input(type="text", placeholder="{% trans 'Prix...' %}", ng-model="prices.hour.amount").table-form
                                    | {% trans "€" %}
                            tr
                                td {% trans "1 jour" %} *
                                td
                                    input(type="text", placeholder="{% trans 'Prix...' %}", ng-model="prices.day.amount", required).table-form
                                    | {% trans "€" %}
                            tr
                                td {% trans "3 jours" %}
                                td
                                    input(type="text", placeholder="{% trans 'Prix...' %}", ng-model="prices.three_days.amount").table-form
                                    | {% trans "€" %}
                            tr
                                td {% trans "7 jours" %}
                                td
                                    input(type="text", placeholder="{% trans 'Prix...' %}", ng-model="prices.seven_days.amount").table-form
                                    | {% trans "€" %}
                            tr
                                td {% trans "15 jours" %}
                                td
                                    input(type="text", placeholder="{% trans 'Prix...' %}", ng-model="prices.fifteen_days.amount").table-form
                                    | {% trans "€" %}


                        table.calendar(ng-show="isAuto")
                            thead
                                tr
                                    td {% trans "Durée" %}
                                    td {% trans "Prix" %}
                            tbody
                                tr
                                    td {% trans "1 jour" %} *
                                    td
                                        input(type="text", placeholder="{% trans 'Prix...' %}", ng-model="prices.day.amount", required).table-form
                                        | {% trans "€" %}
            .row
                          .col-lg-12
                           table.calendar(ng-show="isAuto")
                            tbody
                                tr
                                    td {% trans "Kilomètres inclus par jour" %}
                                    td
                                        input(type="text", ng-model="product.km_included").table-form
                                        | {% trans "Km" %}

                        table.calendar(ng-show="isRealEstate")
                            thead
                                tr
                                    td {% trans "Durée" %}
                                    td {% trans "Prix" %}
                            tbody
                                tr
                                    td {% trans "1 nuit" %} *
                                    td
                                        input(type="text", placeholder="{% trans 'Prix...' %}", ng-model="prices.day.amount", required).table-form
                                        | {% trans "€" %}
                                tr
                                    td {% trans "3 nuits" %}
                                    td
                                        input(type="text", placeholder="{% trans 'Prix...' %}", ng-model="prices.three_days.amount").table-form
                                        | {% trans "€" %}
                                tr
                                    td {% trans "7 nuits" %}
                                    td
                                        input(type="text", placeholder="{% trans 'Prix...' %}", ng-model="prices.seven_days.amount").table-form
                                        | {% trans "€" %}
                                tr
                                    td {% trans "15 nuits" %}
                                    td
                                        input(type="text", placeholder="{% trans 'Prix...' %}", ng-model="prices.fifteen_days.amount").table-form
                                        | {% trans "€" %}

            .row
                     .col-lg-12
                      table.calendar
                        tbody
                            tr
                                td {% trans "Caution" %}
                                td
                                    input(type="text", name="caution", placeholder="{% trans 'Caution demandée' %} *", ng-model="product.deposit_amount", required).table-form
                                    | €
            | * : {% trans "Tarif obligatoire" %}
            .row
                button(type="submit", class="{% verbatim %}{{submitInProgress ? 'loading' : ''}}{% endverbatim %}").btn.text-white.bg-success-hover.col-xs-8.col-xs-offset-2 {% trans "Enregistrez les modifications" %}
