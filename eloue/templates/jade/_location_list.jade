-load facets i18n

.container.center-text
  h3 {% trans "Explorez les annonces de location dans votre ville" %}
  .row
    ul.nav.nav-justified
      each column in cities_list
        li.divide
        li: ul.nav
          each city in column
            li.item-city
              .col-sm-12: a(href="{% facet_url breadcrumbs 'l' city 'r' 30 'sort' '-created_at' %}").link-success-color.normal-case Location {{ city }}
