-load i18n

.modal.modal__message.fade#messageModal(tabindex="-1", role="dialog", aria-hidden="true")
    .modal-dialog.large
        .modal-content
            .modal-header
                button(type="button", data-dismiss="modal").close
                    span(aria-hidden="true")&times;
                    span.sr-only Close
                h4.modal-title {% trans "Message" %}
            .modal-body
                .static-part
                    section.product-info
                        include ./pop_up_sections/_product_info.jade
                    section.terms(style="padding-bottom: 100px")
                        p  {% trans "Pour rappel, l'échange des données personelles sur notre messagerie est interdit et peut entraîner une suppression de compte" %}
                .change-part
                    section.dialogs
                        include ./pop_up_sections/_dialogs
                    section.input-message
                        include ./pop_up_sections/_input_message
