-load product

.section-header
	h4 {% if is_pro %}Toutes nos annonces{% else %}Annonces similaires{% endif %}
.section-body
	.part
		ul.nav
			each product in product_list
				li
					.thumbnail-img
						a(href="{{ product.url }}"): img(style="{% if product.thumbnail %}background-image: url({{ product.thumbnail }}){% endif %}").bg-image
					.thumbnail-content
						h6
							a(href="{{ product.url }}") {{ product.summary }}
						p
							small {{ product.city|title }}{% if product.zipcode %}, {{ product.zipcode }}{% endif %}
						span.badge.price {{ product.price|price:"&euro; /jour" }}
