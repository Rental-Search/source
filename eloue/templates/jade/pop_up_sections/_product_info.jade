include ../../jade/_mixins

.thumbnail-img
    a(href="#"): img(style="background-image: url({% verbatim %}{{product.picture}}{% endverbatim %})").bg-image
.thumbnail-content
    h3 {% verbatim %}{{product.summary}}{% endverbatim %}
    p.location
        i.flaticon.stroke.location-pin-3
        | {% verbatim %}{{product.address.city}}{% endverbatim %}, {% verbatim %}{{product.address.zipcode}}{% endverbatim %}
    p.stats
        +average-rate("product.stats.average_rating")
        +rate-counter("product.stats.ratings_count")
        +number-of-comments("product.stats.booking_comments_count")
    .declarer
        .thumbnail-img
            a(href="#"): img(style="background-image: url({% verbatim %}{{product.owner.avatar.thumbnail}}{% endverbatim %})").bg-image
        .thumbnail-content
            p {% verbatim %}{{product.owner.first_name}}{% endverbatim %} {% verbatim %}{{product.owner.last_name}}{% endverbatim %}
