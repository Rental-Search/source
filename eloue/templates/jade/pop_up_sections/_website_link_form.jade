-load patron i18n

{% if not product.object.redirect_url %}
- var product_link = patron.url
{% else %}
- var product_link = product.object.redirect_url
{% endif %}

h4
  {% blocktrans %}
  b N’hésitez pas à venir sur notre site internet.
  | vous devriez y trouver les réponses à toutes vos questions.
  {% endblocktrans %}
  {% if patron.slug == "carrefourlocation" %}
  {% if product %}
  a(href="{{ product_link }}?utm_source=eloue&utm_medium=annonce&utm_content={{product.object.slug}}&utm_campaign=eloue_redirection_annonce", target="_blank")#websiteProLink.btn.btn-lg.bg-primary.btn-inline: b {{ patron.url|hostname }}
  {% else %}
  a(href="{{product_link}}?utm_source=eloue&utm_medium=annonce&utm_content=boutique&utm_campaign=eloue_redirection_annonce", target="_blank")#websiteProLink.btn.btn-lg.bg-primary.btn-inline: b {{ patron.url|hostname }}
  {% endif %}
  {% else %}
  a(href="{{ product_link }}", target="_blank")#websiteProLink.btn.btn-lg.bg-primary.btn-inline: b {{ patron.url|hostname }}
  {% endif %}
