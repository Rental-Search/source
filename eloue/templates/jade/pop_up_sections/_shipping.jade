                    | {% verbatim %}{{point.name}}{% endverbatim %}
                    br
                    | {% verbatim %}{{point.address}}{% endverbatim %}
                    br
                    | {% verbatim %}{{point.zipcode}}{% endverbatim %} {% verbatim %}{{point.city}}{% endverbatim %}
