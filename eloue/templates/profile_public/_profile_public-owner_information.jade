.section-header
  if is_pro
    span.badge-pro.pull-right pro
    h4 Informations sur membre
  else
    h4 Informations sur le membre
.section-body
  {% if is_pro %}
  .part
    p: i Lorem ipsum dolor sit amet, consectetur adipisicing elit. Odit accusamus laudantium repudiandae soluta amet consequuntur, quo saepe architecto illum autem dolorem quaerat tempora aspernatur eos nesciunt veritatis impedit minima, tempore laboriosam cumque. Laborum ad ex libero debitis dolores cum praesentium facilis nihil quis eaque error, ipsam enim aspernatur deserunt vitae.
  {% else %}
  .part
    p: b Membre depuis le {{ patron.date_joined|date:"d F Y" }}
    if patron.about
      p.indent-b-sm: i {{ patron.about }}
    a(href="#/message", data-dismiss="modal").btn.bg-success.send-message
      i.flaticon.stroke.mail-2
      | Envoyez un message
    a(href="#/phone", data-dismiss="modal").btn.bg-success.call
      i.flaticon.stroke.phone-3
      | Appelez
    ul.nav.stats
      {% with patron.stats as stats %}
      include ../jade/_patron_stats
      {% endwith %}
  {% endif %}
