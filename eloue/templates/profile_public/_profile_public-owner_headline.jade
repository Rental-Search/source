.container.text-center.indent-t-lg
  .round-img: img(style="{% if patron.profile.url %}background-image: url({{ patron.profile.url }}){% endif %}").bg-image
  h3.indent-b-xs {{ patron.username }}{% if is_pro %}&nbsp;Pro{% endif %}
  
  if not is_pro
    {% with patron.average_note as rate %}
    include ../jade/_rate
    {% endwith %}
    {% with patron.default_address as address %}
    p.text-gray-strong.indent-t-xs {{ address.city|title }}{% if address.zipcode %}, {{ address.zipcode }}{% endif %}
    {% endwith %}
