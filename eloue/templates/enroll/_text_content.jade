    ul(id="tabs", style="border-bottom: none;", class="nav nav-tabs orange", data-tabs="tabs")
      li.active
        a(href="#technical-department", data-toggle="tab") &nbsp;&nbsp;&nbsp;développement&nbsp;&nbsp;&nbsp;
      li
        a(href="#customer-department", data-toggle="tab") &nbsp;&nbsp;&nbsp;relation client&nbsp;&nbsp;&nbsp;
      li
        a(href="#sales-department", data-toggle="tab") &nbsp;&nbsp;&nbsp;service commercial&nbsp;&nbsp;&nbsp;

div(id="content")
  .container
    div(class="tab-content", style='margin: 2% 10% 1%;')
      div(class="tab-pane", id="sales-department")
