extends ../../base
-load compressed staticfiles

block append styles
  {% compressed_css "dashboard_styles" %}

block scripts
  {% compressed_js "dashboard_js" %}
script
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-8258979-1']);
    _gaq.push(['_setDomainName', 'www.e-loue.com']);
    _gaq.push(['_trackPageview']);
    {% spaceless %}
    {% if request.user.is_authenticated %}
    _gaq.push(['_setVar', 'authenticated']);
    {% else %}
    _gaq.push(['_setVar', 'anonymous']);
    {% endif %}
    {% endspaceless %}
block append content-body
  div(style="width: 300px;height:300px;margin-left: auto;margin-right: auto;", ng-show="false").loading
  .container-full-screen(data-ng-controller="DashboardRootCtrl", style="display: none;")
    header.header-site
      include ../../jade/_header_site
    article.dashboard
      nav(ng-show="!!currentUser")
        ul
          li(ng-repeat="tab in dashboardTabs")
            {% verbatim %}
            a(ui-sref="{{tab.sref}}").text-success-dark
              i.flaticon(class="{{tab.icon}}")
                span.badge-count-action(ng-show="tab.badge", ng-bind="tab.badge")
              | {{tab.title}}
            {% endverbatim %}
      .content-view(ui-view)
