extends ../../base
-load compressed staticfiles

block append styles
  {% compressed_css "dashboard_styles" %}

block scripts
  script(src="{% static 'bower_components/requirejs/require.js' %}", data-main="{% static 'js/dashboard/main.js' %}", data-static-path="{{ STATIC_URL }}")

block append content-body
  .container-full-screen(data-ng-controller="DashboardRootCtrl")
    header.header-site
      include ../../jade/_header_site
    article.dashboard
      nav(ng-show="!!currentUser")
        ul
          li(ng-repeat="tab in dashboardTabs")
            {% verbatim %}
            a(ui-sref="{{tab.sref}}").text-success-dark
              i.flaticon(class="{{tab.icon}}")
                span.badge-count-action(ng-show="tab.badge", ng-bind="tab.badge")
              | {{tab.title}}
            {% endverbatim %}
      .content-view(ui-view)

#ngModals
    eloue-login-form
    eloue-registration-form
    eloue-password-reset-form
