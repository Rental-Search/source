{% verbatim %}
ul.zebra-list.indent-md-b(ng-if="!!booking")
    li.clearfix
        .col-xs-3 Statut
        .col-xs-9: span(class="{{booking.state}}")
            span(translate="{{booking.state}}").booking-bage
    li.clearfix
      .col-xs-3 Début
      .col-xs-9.text
        span(translate="{{booking.start_date.week_day}}")
        |  {{booking.start_date.day}} 
        span(translate="{{booking.start_date.month}}")
        |  {{booking.start_date.year}} 
        span(translate="at")
        |  {{booking.start_time}}
    li.clearfix
      .col-xs-3 Fin
      .col-xs-9.text
        span(translate="{{booking.end_date.week_day}}")
        |  {{booking.end_date.day}} 
        span(translate="{{booking.end_date.month}}")
        |  {{booking.end_date.year}} 
        span(translate="at")
        |  {{booking.end_time}}
    li.clearfix
      .col-xs-3 Période
      .col-xs-9.text {{booking.period_days}} jours et {{booking.period_hours}} heures
    li.clearfix
      .col-xs-3 Prix
      .col-xs-9.text-primary {{booking.total_amount}}€
    li.clearfix
      .col-xs-3 Caution
      .col-xs-9.text {{booking.deposit_amount}}€
    li.clearfix(ng-show="allowDownloadContract")
        .col-xs-3 Contrat
        .col-xs-9
            a(href="{{contractLink}}", target="_blank").text-success.text-underline-hover Télécharger le contrat
.text-right(ng-if="!!booking")
  a(ui-sref="bookings.detail({uuid: booking.uuid})").btn-inline.bg-success-hover.text-white Détails de la réservation
{% endverbatim %}
