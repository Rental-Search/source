{% verbatim %}
section.tabs-vertical-static.pull-nothing(ng-show="!!messageThread")
    ul.scrollbar-custom.messages-container
        li.tab-vertical.block-with-thumbnail(ng-repeat="message in messageThread.messages | orderBy:'id'")
            .col-thumbnail
                .thumbnail.round: a(href="#").sm
                    img(style="background-image: url({{message.sender.avatar.thumbnail}});")
            .col-exposition
                h3: a(href="#").text-underline-hover {{message.sender.username}}
                p.small.text-gray-light {{message.sent_at}}
                p.normal.text-gray.text-justify {{message.body}}

    form(ng-submit="postNewMessage()").send-dialog-message.clearfix
      fieldset(data-ng-disabled="submitInProgress")
        .textarea-wrapper
            textarea#message-text.expand(name="message-text", tabindex="1", placeholder="RÃ©digez votre message ici...", ng-model="message")
        button(type="submit", class="{{submitInProgress ? 'loading' : ''}}").btn.bg-success-hover.text-white Envoyez
{% endverbatim %}
