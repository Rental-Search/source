include ../jade/_mixins

{% verbatim %}
section.tabs-vertical-active.lg(ng-show="items && (items.length > 0 || !!selectedCategory)")
  .section-header
    .row
      .indent-xs-t.col-xs-4.col-xs-offset-8
        .select-gradient.without-search
          select(ng-model="selectedCategory", ng-change="filterByCategory()", eloue-chosen)
            option(value="") Catégories
            option(ng-repeat="category in categories", value="{{category.id}}") {{category.name}}
  ul.scrollbar-custom(eloue-lazy-load, lazy-data="items", lazy-data-provider="ProductsService", lazy-load-method="getProductsByOwnerAndRootCategory")
      li.tab-vertical.block-with-thumbnail(ng-repeat="item in items | filter:itemsFilter track by item.id", id="item-{{item.id}}", ui-sref="items.info({id: item.id})")
        .col-thumbnail
          .thumbnail
            a(ui-sref="items.info({id: item.id})"): img(ng-src="{{getProductImg(item.picture)}}", alt="{{item.summary}}", width="130", onerror="$(this).attr('src', '/static/img/product_img_full.png')")
        .col-exposition
          h3.small
            | Location&nbsp;
            a(ui-sref="items.info({id: item.id})") {{item.summary}}
          p.normal.text-gray
            big.text-primary {{item.pricePerDay}}€ / jour
            br
            {% endverbatim %}
            +average-rate("item.stats.average_rating")
            +number-of-comments("item.stats.booking_comments_count")
            +number-of-bookings("item.stats.bookings_count")

