block details
    .section-content
      fieldset(data-ng-disabled="submitInProgress")
        h2 Catégories
        .row
            {% verbatim %}
            .col-md-4
                .form-control
                    select(ng-model="rootCategory", ng-change="updateNodeCategories()", eloue-chosen, opts="rootCategories", data-ng-disabled="submitInProgress", data-placeholder="Catégorie Niv.1")
                        option(ng-repeat="category in rootCategories", ng-selected="category.id == rootCategory", value="{{category.id}}") {{category.name}}
            .col-md-4
                .form-control
                    select(ng-model="nodeCategory", ng-change="updateLeafCategories()", eloue-chosen, opts="nodeCategories", ng-required="isAuto || isRealEstate", data-ng-disabled="submitInProgress", data-placeholder="Catégorie Niv.2")
                        option(ng-repeat="category in nodeCategories", ng-selected="category.id == nodeCategory", value="{{category.id}}") {{category.name}}
            .col-md-4
                .form-control
                    select(ng-model="product.category", ng-required="!isAuto && !isRealEstate", eloue-chosen, opts="leafCategories", data-ng-disabled="submitInProgress", ng-if="!isAuto && !isRealEstate", data-placeholder="Catégorie Niv.3")
                        option(ng-repeat="category in leafCategories", ng-selected="(categoriesBaseUrl + category.id + '/') == product.category", value="{{categoriesBaseUrl}}{{category.id}}/") {{category.name}}
            {% endverbatim %}
        h2 Titre
        .row
            .col-xs-12
                input#title.form-control(type="text", name="title", placeholder="Titre", ng-model="product.summary")
        h2 Adresse
        .row
            .col-sm-12: input(type="text", name="street", placeholder="Rue *", required, ng-model="product.addressDetails.street").form-control
        .row
            .col-sm-6: input(type="text", name="zipcode", placeholder="Code postal *", required, ng-model="product.addressDetails.zipcode").form-control
            .col-sm-6: input(type="text", name="city", placeholder="Ville *", required, ng-model="product.addressDetails.city").form-control
        h2 Photos
        .row
            form#add-picture
              fieldset(data-ng-disabled="submitInProgress")
                {% verbatim %}
                ul.text-gray.container-with-square-thumbnail.indent-xs-b
                    li(ng-show="product.pictures.length < 3").block-with-thumbnail
                        label(for="image").file-input-drag
                            i.icon-3x.flaticon.solid.plus
                            input(type="file", name="image", file-chooser, on-change="onPictureAdded()")#image
                            input(type="hidden", name="product", value="{{productsBaseUrl}}{{product.id}}/")#product
                    li(ng-repeat="picture in product.pictures track by picture.id", style="padding-top: 0;").block-with-thumbnail
                         .col-thumbnail
                           .thumbnail: span.lg-p
                             img(style="background-image: url({{picture.image.thumbnail}});")
                {% endverbatim %}
        form(name="itemInfoForm", ng-submit="updateProduct()")
          fieldset(data-ng-disabled="submitInProgress")
            h2(ng-show="isAuto || isRealEstate") Caractéristiques
            include ./_item_characteristics
            h2 Informations complémentaires
            .row.indent-md-b
                .col-sm-12
                    textarea#description.expand(name="description", tabindex="1", rows="6", placeholder="", ng-model="product.description")
            .row
                {% verbatim %}
                button(type="submit", class="{{submitInProgress ? 'loading' : ''}}").btn.text-white.bg-success-hover.col-xs-8.col-xs-offset-2 Enregistrez les modifications
                {% endverbatim %}
