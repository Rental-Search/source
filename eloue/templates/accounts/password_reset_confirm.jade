extends ../base
-load i18n

block append content-body
  if validlink
    h1 {% trans "Mise à jour du mot de passe effectuée" %}
  else
    h1 {% trans "Lien de mot de passe oublié invalide" %}
    p
     | {% trans "Votre lien n'est plus valide. Merci de recommencer la procédure de réinitialisation de mot de passe en cliquant sur ce lien" %} :
     a(href="{% url 'password_reset' %}") {% trans "Mot de passe oublié" %}
