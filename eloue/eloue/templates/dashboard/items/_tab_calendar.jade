.section-content
  form(action="itmes")
    .row
      .col-xs-7
        h2 SÃ©lectionner le mois
      .col-xs-5
        .form-control.without-search.select-gradient
          select
            each month in months
              option(value="#{month}") #{month} 2014
    .row
      .col-xs-12
        table.calendar.text-center
          thead
            tr
              each day in days_of_week
                td #{day}
          tbody
            each day, count in days
              if count % 7 == 0
                tr
                  td #{+day}
                  td #{+day+1}
                  td #{+day+2}
                  td #{+day+3}
                  td #{+day+4}
                  td #{+day+5}
                  td #{+day+6}

