include ../jade/_global_variables

block sections
  aside.profil-info.scrollbar-custom
    .section-content.text-gray
      {% verbatim %}
      form#change-photo
        h2.text-black Informations personnelles
        .row
          //- change photo
          .block-with-thumbnail.form-control.col-sm-12
            .col-thumbnail
              .thumbnail.round.indent-sm-r: img(data-ng-src="{{currentUser.avatar.profil}}", alt="avatar")
            .col-exposition
              label(for="change-img").file-input-btn.btn.bg-gray-hover.text-white Modifier mon image
                input(type="file", name="avatar", file-chooser, on-change="onFileChanged()")#change-img
                input(type="hidden", name="_method", value="PUT")
      form#profile-information(data-ng-submit="dataFormSubmit()")
        //- proffessional radio btns
        .row
          .col-sm-5
            h3.text-black Je suis un professionnel ?
          .col-sm-2
            label.rad-btn.form-control Oui
              input#newsletter(type="radio", name="is_professional")
              i
          .col-sm-2
            label.rad-btn.form-control Non
              input#is-pro(type="radio", name="is_professional", checked)
              i
        //- nackname & email
        .row
          .col-md-12.col-lg-6
            input#username.form-control(type="text", name="username", placeholder="Pseudo *", required, autofocus, value="{{currentUser.username}}")
          .col-md-12.col-lg-6
            input#email.form-control(type="email", name="email", placeholder="Email *", required, value="{{currentUser.email}}")
        //- gender, first-name, name
        .row
          .col-sm-2.without-search
            .form-control
              select
                option(value="male") M.
                option(value="female") F.
          .col-sm-5
            input#first_name.form-control(type="text", name="first_name", placeholder="Prénom *", required, value="{{currentUser.first_name}}")
          .col-sm-5
            input#last_name.form-control(type="text", name="last_name", placeholder="Nom *", required, value="{{currentUser.last_name}}")
        //- address
        .row
          .col-sm-12.select-gradient.without-search.form-control
            p.text-uppercase: b: small adresse par défaut
            select
              //-option(value="#{tenant.address}") #{tenant.address}
            h4.indent-sm-v.text-right.text-success-hover: a(href="#") Ajouter ou modifier une adresse
        //- telephone
        .row
          .col-sm-12.select-gradient.without-search.form-control
            p.text-uppercase: b: small téléphone par défaut
            select
              //-each telefone in tenant.telephones
              //-
                option(value="#{telefone}") #{telefone}
            h4.indent-sm-v.text-right.text-success-hover: a(href="#") Téléphone par défaut
        //- about myself
        .row
          .col-sm-12
            textarea#about-myself.expand.form-control(name="about-myself", tabindex="1", rows="6", placeholder="A propos de vous...")
        //- languages
        .row
          .col-sm-12.without-search.form-control
            select(multiple="", data-placeholder="Langues parlées")
              //-each language in tenant.languages
              //-
                option(value="#{language.ID}") #{language.self}
        //- newsletter
        .row
          .col-sm-8
            h3.text-black J’accepte de recevoir la newsletter e-loue
          .col-sm-2
            label.rad-btn.form-control Oui
              input#newsletter(type="radio", name="newsletter")
              i
          .col-sm-2
            label.rad-btn.form-control Non
              input#newsletter(type="radio", name="newsletter", checked)
              i
        h2.text-black Informations sur le permis
        //- date birthday
        {% endverbatim %}
        .row.form-control
          .col-sm-2
            select#select-day(name="select-day", data-placeholder="Jour")
              each day in days
                option(value="#{day}") #{day}
          .col-sm-4
            select#select-month(name="select-month", data-placeholder="Mois")
              each month in months
                option(value="#{month}") #{month}
          .col-sm-3
            select#select-year(name="select-year", data-placeholder="Année")
              each year in years
                option(value="#{year}") #{year}
        {% verbatim %}
        //- license-number
        .row
          .col-sm-12
            input#drivers_license_number.form-control(type="text", name="drivers_license_number", placeholder="Numéro de permis *", required, value="{{currentUser.drivers_license_number}}")
        //- drag photo
        .row
          .col-sm-12.form-control
            label(for="change-img").file-input-drag
              i.fa.fa-plus.fa-4x
              br
              | Ajouter une photo de votre permis
              input(type="file")#change-img
            h4.indent-sm-v.text-right.text-success-hover: a(href="#") Modifier la photo du permis
        //- btn submit
        .row
          .col-sm-6.col-sm-offset-3
            button(type="submit").btn.bg-success-hover.text-white Enregistrez les informations
        {% endverbatim %}
