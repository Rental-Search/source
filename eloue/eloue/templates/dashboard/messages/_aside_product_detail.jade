//-include ../jade/_mixins

aside.tabs-vertical-static.pull-right.lg(ng-show="messageThread && messageThread.product")
  .section-header: h4.text-center.indent-xs-t Réservation associé à :
  ul.scrollbar-custom
    li.tab-vertical
      .section-content
        {% verbatim %}
        img(data-ng-src="{{messageThread.product.picture}}, alt="", width="100%")
        h3.indent-xs-v: a(href="#").text-underline-hover: b {{messageThread.product.summary}}
        p.text-gray
          i.fa.fa-map-marker.fa-lg &nbsp;
          | {{messageThread.product.address.city}},&nbsp;
          | {{messageThread.product.address.zipcode}}
        p.text-gray.indent-sm-v
          //-+average-rate(lot_BMW.rate)
          //-+rate-counter(lot_BMW.rate_count)
          //-+number-of-comments(lot_BMW.comments_count)

        .block-with-thumbnail
          .col-thumbnail
            .thumbnail.round: a(href="#")
              img(data-ng-src="{{messageThread.product.owner.avatar.thumbnail}}", alt="{{messageThread.product.owner.username}}", width="40", height="40")
          .col-exposition
            a(href="#").text-underline-hover.text-gray
              h4.indent-xs-h {{messageThread.product.owner.first_name}} {{messageThread.product.owner.last_name}}
        {% endverbatim %}

    li.tab-vertical: .section-content
        include ./_details_reservation
        include ./_form_reservation
