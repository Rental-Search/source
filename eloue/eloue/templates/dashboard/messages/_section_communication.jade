{% verbatim %}
section.tabs-vertical-static.pull-nothing
  ul.scrollbar-custom.messages-container
      li.tab-vertical.block-with-thumbnail(ng-repeat="message in messageThread.messages track by message.id")
        .col-thumbnail
          .thumbnail.round: a(href="#")
            img(ng-src="{{message.sender.avatar.thumbnail}}, alt="{{message.sender.username}}")
        .col-exposition
          h3: a(href="#").text-underline-hover {{message.sender.username}}
          p.small.text-gray-light {{message.sent_at}}
          p.normal.text-gray.text-justify {{message.body}}

  form(ng-submit="postNewMessage()").send-dialog-message.clearfix
    .textarea-wrapper
      textarea#message-text.expand(name="message-text", tabindex="1", placeholder="RÃ©digez votre message ici...", ng-model="message")
    button(type="submit").btn.bg-success-hover.text-white Envoyez
{% endverbatim %}
