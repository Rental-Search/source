mixin average-rate(rating, counter)
  span.average-rate
    span.star
      -var stars = [1, 2, 3, 4, 5]
      each star in stars
        if star === rating
          i.icon-lg.current.flaticon.solid.star-2
        else
          i.icon-lg.flaticon.solid.star-2
    if counter
      span.rate-counter
        | #{counter}

mixin number-of-comments(counter)
  span.number-of-comments
    i.icon-lg.flaticon.stroke.writing-comment
    span #{counter}

mixin number-of-bookings(counter)
  span.number-of-bookings
    i.icon-lg.flaticon.stroke.calendar-5
    span #{counter}

mixin verify-type(icon, text, color)
  .block-with-thumbnail
    .col-thumbnail
      .thumbnail
        i.icon-fw.icon-3x.indent-sm-r(class="#{icon} text-#{color}")
    .col-exposition #{text} verifi√©
      i.icon-lg.flaticon.solid.checkmark-2.indent-xs-l.text-success
