extends _base_product_detail
block tab
  .carousel-wrapper.block-tab
    -var it = [1,2,3]
    .thumbnail-inner
      each i in it
        .thumbnail-img
          img(src=STATIC_URL+"img/carousel-product/#{i}.jpg", alt="")
    #carousel-product.carousel.slide(data-ride="carousel")
      .carousel-inner
        each i in it
          if i == 1
            .item.active
              img(src=STATIC_URL+"img/carousel-product/#{i}.jpg", alt="")
          else
            .item
              img(src=STATIC_URL+"img/carousel-product/#{i}.jpg", alt="")
      a(href="#carousel-product" role="button" data-slide="prev").left.carousel-control
        i.flaticon.stroke.left-2
      a(href="#carousel-product" role="button" data-slide="next").right.carousel-control
        i.flaticon.stroke.right-2