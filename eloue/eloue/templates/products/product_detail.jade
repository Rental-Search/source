extends ../base

block variables
  -var STATIC_URL = "../../static/"
  -var STYLESHEET_NAME = "product_detail_styles"

block content
  include ../jade/_src
  header.header-site
    include ../jade/_header_site
  nav
    include ../jade/_breadcrumbs
  article.container
    .row
      .col-sm-8.product-details-title
        include ../jade/_porduct_details_title
      .col-sm-4.share-btns
        include ../jade/_share-btns
    .row
      main.col-sm-8
        section
          .section-body
            .part.picture-tab
              include ../jade/product_details/main/_picture_tab
            .part.description
              include ../jade/product_details/main/_description
            .part.comments.comments-ad
              include ../jade/product_details/main/_comments_ad
            .part.comments.comments-owner
              include ../jade/product_details/main/_comments_owner
      aside.col-sm-4
        section.booking-form
          include ../jade/product_details/aside/_booking_form
        section.add-to-wishlist
          include ../jade/product_details/aside/_add_to_wishlist
        section.owner-information
          include ../jade/product_details/aside/_owner_information
        section.similar-listing
          include ../jade/product_details/aside/_similar_listing
        section.connected-with-owner
          include ../jade/product_details/aside/_connected_with_owner
  footer
    section.row-fluid.insurances.framing
      include ../jade/_insurances
    section.row-fluid.footer-links
      include ../jade/_footer_links
    section.row-fluid.rss
      include ../jade/_rss

  include ../jade/_pop_up
