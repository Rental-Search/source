doctype
html(lang = "en")
	head
		-var title = "e-loue"
		include ../jade/_head
		
	body
		include ../jade/_src
		.container-flex
			header
				include ../jade/_header-site
			nav
				include ../jade/_breadcrumbs

			article.row-fluid
				.container.product-details
					.row.mrg-v-5
						.col-md-8.title
							h3 Location 
								span.name Bmw - 520 touring luxe 
								|- 
								span.location NICE
							ul.breadcrumb
								-var specifications = ["Année 2010", "Moteur Diesel", "Boite Automatique", "10 000 à 30 000 km"]
								-each specification in specifications
									li #{specification}
						.col-md-4.share-btns
					.row
						.col-md-8 sd
						include ../jade/_aside

			footer
				include ../jade/_insurances
				include ../jade/_footer-links
				include ../jade/_rss

			include ../jade/_sign-in
			include ../jade/_log-in

		script(src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js")
		script(src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js")
		//- script(src="http://ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js")
		script(src="http://jamesallardice.github.io/Placeholders.js/assets/js/placeholders.min.js")

		script(src="http://maps.googleapis.com/maps/api/js?sensor=false&libraries=places")
		script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js")
		script(src="/js/chosen.jquery.min.js")
		script(src="/js/formmapper.js")
		script(src="/js/bootstrap/modal.js")
		script(src="/js/bootstrap/dropdown.js")
		script.
			$(document).ready(function(){
				var classic_form = $('.classic-form');
				classic_form.hide();
				$('#geolocate').formmapper({
					details: "form",
				});
				$('.registration').on('click', function(){
					classic_form.slideDown();
					$(this).slideUp();
					console.log($(this))
				});
				$("select").chosen();
			});
