doctype
html
	head
		title e-loue
		meta(charset="UTF-8")
		meta(name = "viewport" content = "width=device-width, initial-scale=1.0")
		link( href ="http://fonts.googleapis.com/css?family=Open+Sans:400,700,600,300" rel="stylesheet" )
		link(href = "css/styles.css" rel = "stylesheet")
		link(rel="shortcut icon" href="img/favicon.ico")
		script(src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js")
		script(src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js")
		//-[if lt IE 9]>
				<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js">
				</script> <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
				<![endif]
	body
		include jade/src
		//- mixin col()
			.c
		.container-flex
			include jade/header
			.row.banner.hidden-sm.hidden-xs
				.container
					img(src = "img/banner.jpg")
					.banner-content
							p
								| louez un objet, une voiture...
								br
								| près de chez vous, en tout sécurité !
							//- button(type = "button").btn.btn-default.btn-lg
								| une communauté de confiance
							a( href = "#" ) une communauté de confiance

			.row.insurances.framing
				.container
					.row
						.col-md-12.col-md-offset-0.col-lg-10.col-lg-offset-1
							ul.nav.nav-tabs.nav-justified
								-var blocks = []
								-blocks[0] = { category: "payment", "title": "Louez en toute sécurité", "description": [ "Transactions en ligne sécurisées.", "Aucun échange d'argent." ] }
								-blocks[1] = { category: "serenity", "title": "Louez en toute sérénité", "description": [ "Assurance incluse et automatique.", "Caution en ligne." ] }
								-blocks[2] = { category: "simplicity", "title": "Louez en toute simplicité", "description": [ "Service client dédié 7j/7.", "Dépot d'annonce gratuite." ] }
								-blocks[3] = { category: "trust", "title": "Louez en toute confiance", "description": [ "Notes et commentaires en ligne.", "Messagerie en ligne." ] }
								-each block in blocks
									li.divide
									li
										.insurances-img
											span( class = block.category)
										h4 #{block.title}
										-each description in block.description
											p #{description}

			.row.product-list
				.container
					.col-md-12.col-md-offset-0.col-lg-10.col-lg-offset-1
						h3
							span.products-count 324 654 
							| annonces de location dans 
							span.products-location toute la France
						ul.row.nav
							-var products = []
							-products[0] = { "image": "img/home-products/bike.jpg", "title": "Bike Bike Bike Bike Bike Bike Bike Bike Bike Bike ", "location": "Aubervillies", "price": "56", "declarer": "img/home-products/declarer.png" }
							-products[1] = { "image": "img/home-products/audi.jpg", "title": "Audi - A3", "location": "Paris Paris Paris Paris Paris Paris Paris Paris Paris Paris ", "price": "100", "declarer": "img/home-products/declarer.png" }
							-products[2] = { "image": "img/home-products/tent.jpg", "title": "Tante tip indien", "location": "Nantes", "price": "56", "declarer": "img/home-products/declarer.png" }
							-for( var i = 0; i < 8; i++)
								-var ind = i % 3
								li.col-sm-3.item
									a(href="#").thumbnail
										.img-wrapper
											img( src = products[ ind ].image )
											.fog
										span.badge.price #{products[ ind ].price}&euro; /jour
										.info
											.description.text-nowrap
												h4 #{products[ ind ].title}
												p #{products[ ind ].location}
												.declarer
													img( src = products[ ind ].declarer )
						.row.explore
							button(type = "button").btn.btn-success.btn-explore
								span.icon-search
								| Explorez toutes les annonces
			.row.comments.framing
				.container
			.row.location-list
				.container
					.col-md-12.col-md-offset-0.col-lg-10.col-lg-offset-1

