doctype
html(lang = "fr")
	head
		title e-loue
		meta(charset="UTF-8")
		meta(name = "viewport" content = "width=device-width, initial-scale=1.0")
		link( href ="http://fonts.googleapis.com/css?family=Open+Sans:400,700,600,300" rel="stylesheet" )
		link(href = "css/styles.css" rel = "stylesheet")
		//-[if lt IE 9]>
				<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js">
				</script> <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
				<![endif]
		script(src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js")
		script(src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js")
	body
		input(type="checkbox")#sourse
		#sourse-img
			img( src = "sourses/homepage_eloue_V5_vert_V1.jpg" )
		.container
			header.row

				//- header top row
				.col-md-12.col-md-offset-0.col-lg-10.col-lg-offset-1.top
					ul(role = "tablist").nav.nav-tabs.nav-justified.text-nowrap.text-center
						li
							| Bonjour, 
							a( href = "#" ) inscrivez-vous 
							| ou 
							a( href = "#" ) connectez-vous
						li.devide
						li
							| Vous êtes un loueur professionnel, découvrez les 
							a( href ="#") offers e-loue Pro
						li.devide
						li
							| Appelez-nous au 
							b 0826.800.200 
							| (0,15&euro; / min)

				//- header middle row
				.col-md-12.middle
					.col-md-12.col-md-offset-0.col-lg-10.col-lg-offset-1
						.row
							.col-md-2.logo-wrapper
								a(href = "#")
									img(src = "img/logo.png")
							.col-md-7
								.input-group
									input(type = "text" placeholder = "Que voulez-vous louer ?" title = "Que voulez-vous louer ?").form-control.what-field
									span.input-group.where-field
										span.input-group-addon.glyphicon.glyphicon-search
										input(type = "text" placeholder = "Où ça ?" title = "Où ça ?").form-control
									span.input-group-btn
										button(type = "button").btn.btn-default
											span.glyphicon.glyphicon-search
							.col-md-3
								button(type = "button").btn.btn-success Déposez une annonce

				//- header middle row
				.col-md-12.bottom
					.col-md-12.col-md-offset-0.col-lg-10.col-lg-offset-1.zero
						ul.nav
							-var items = [ "Logement", "Jardinage", "Automobile", "Image et son", "Bricolage", "Mode et accessoire", "Réceprion", "Santé et Bien être", "Autres" ]
							-each item in items
								li
									a( href = "#" + item ) #{item}

